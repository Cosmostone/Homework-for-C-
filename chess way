#include "stdafx.h"
#include<iostream>
using namespace std;

int f(int x);

int main(){
	cout << "Input nï¼š";
	int n;
	cin >> n;
	int z = f(n);
	cout << "The number of different ways is:"<<z;
	return 0;
}

int f(int x) {
	if (x == 1) return 3;
	if (x == 2) return 7;
	int num = 2 * f(x - 1) + f(x - 2);
	return num;
}

#include<iostream>
using namespace std;

int judge(int n);

int main(){
	int n;
	cout << "Input the number n:";
	cin >> n;
	n = judge(n);

    return 0;
}

int judge(int n) {
	int a = n / 100;
	int b = (n - n / 100 * 100) / 10;
	int c = n - n / 100 * 100 - (n - n / 100 * 100) / 10*10;
	while (a==b&&b==c&&a==c) {
		cout << "Retry n:";
		cin >> n;
	}
	return n;
}


//3digits dif do(max-min) most 7 out every
